<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pre_cheat_field_category_original">

        <EditTextPreference
                app:key="@string/key_original_field_device_id"
                app:persistent="false"
                app:title="@string/pre_title_cheat_device_id" />

        <EditTextPreference
                app:key="@string/key_original_field_android_id"
                app:persistent="false"
                app:title="@string/pre_title_cheat_android_id" />

        <EditTextPreference
                app:key="@string/key_original_field_line1_num"
                app:persistent="false"
                app:title="@string/pre_title_cheat_line_one_num" />

        <EditTextPreference
                app:key="@string/key_original_field_sim_serial"
                app:persistent="false"
                app:title="@string/pre_title_cheat_sim_serial" />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/pre_cheat_field_category_cheated">

        <EditTextPreference
                app:key="@string/key_cheat_field_device_id"
                app:persistent="false"
                app:title="@string/pre_title_cheat_device_id" />

        <EditTextPreference
                app:key="@string/key_cheat_field_android_id"
                app:persistent="false"
                app:title="@string/pre_title_cheat_android_id" />

        <EditTextPreference
                app:key="@string/key_cheat_field_line1_num"
                app:persistent="false"
                app:title="@string/pre_title_cheat_line_one_num" />

        <EditTextPreference
                app:key="@string/key_cheat_field_sim_serial"
                app:persistent="false"
                app:title="@string/pre_title_cheat_sim_serial" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pre_cheat_field_category_others">
        <SwitchPreferenceCompat
                app:key="@string/key_cheat_field_show_cheated_app_notifications"
                app:persistent="false"
                app:title="@string/pre_title_cheat_show_cheated_apps_notifications" />
    </PreferenceCategory>
</PreferenceScreen>
